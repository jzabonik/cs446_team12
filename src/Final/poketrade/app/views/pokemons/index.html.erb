<h1>Listing Pokémon</h1>

<table>
  <% @pokemons.each do |pokemon| %>
    <tr>
      <td>
        <%= image_tag(pokemon.image_url, class: 'list_image') %>
      </td>
      <td class="list_description">
        <ul>
          <li class="name" id="<%= pokemon.type_one %>"><%= pokemon.name %></li>
		  <% if pokemon.type_two %>
		    <li>Type: <%= pokemon.type_one %>/<%= pokemon.type_two %></li>
		  <% else %>
		    <li>Type: <%= pokemon.type_one %></li>
		  <% end %>
		  <li>Pokédex: <%= pokemon.pokedex %></li>
        <ul>
      </td>
      <td class="list_actions">
        <%= link_to 'Show', pokemon %><br/>
        <%= link_to 'Edit', edit_pokemon_path(pokemon) %><br/>
        <%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
<br />

<%= link_to 'New Pokémon', new_pokemon_path %>