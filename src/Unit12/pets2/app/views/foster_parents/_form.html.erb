    <%= f.label :address %><br>
    <%= f.text_area :address, rows: 3, cols: 40 %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :pet_id %>: <br>
	<% if @animal %>
		<%= f.text_field :pet_id, value: @animal.id%>
	<% else %>
		<%= f.text_field :pet_id %>
