<h1>Listing animals</h1>
<div class="sort_line">
	<%= link_to 'Sort by Name', controller: "animals", method: :index, :sort => 'name' %>
	<%= link_to 'Sort by Breed', controller: "animals", method: :index, :sort => 'breed'%>
</div>
<table class=animals>
<% @animals.each do |animal| %>
	<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
		<td>
			<%= image_tag(animal.image_url, class: 'list_image') %>
		</td>
		<td class="list_habits">
			<dl>
				<dt><%= animal.name %></dt>
				<dd><%= truncate(strip_tags(animal.habits), length: 80) %></dd>
			</dl>
		</td>
		<td class="list_actions">
			<%= link_to 'Show', animal %><br/>
			<%= link_to 'Edit', edit_animal_path(animal) %><br/>
			<%= link_to 'Destroy', animal, method: :delete,
						data: { confirm: 'Are you sure?' } %>
		</td>
	</tr>
<% end %>
</table>
<br />

<%= link_to 'New Animal', new_animal_path %>
